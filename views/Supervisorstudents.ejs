        </div>
      </nav>

      <div class="container-fluid m-0">
        <div class="row">
            <div class="col-2 bg-primary sidebar" id="navbarTogglerDemo02">
                <div class="" >
                    <div class=" ">
                      <h5 class="text-white h4">content</h5>
                      <hr>
                      <div class="d-grid gap-2 ">
                        <button class="btn btn-primary text-start" type="button"><a href="/supervisor" style="text-decoration: none; color: white;">Dashboard</a></button>
                        <button class="btn btn-primary text-start" type="button"><a href="" style="text-decoration: none; color: white;">Project</a></button>
                        <button class="btn btn-primary text-start" type="button"><a href="/supervisor/students" style="text-decoration: none; color: white;">Student</a></button>
                        <button class="btn btn-primary text-start" type="button"><a href="/supervisor/students/message" style="text-decoration: none; color: white;">Message</a></button>
                        <button class="btn btn-primary text-start" type="button"><a href="" style="text-decoration: none; color: white;">Approval</a></button>
                        <button class="btn btn-primary text-start" type="button"><a href="" style="text-decoration: none; color: white;">Report</a></button>
                        <button class="btn btn-primary text-start" type="button"><a href="" style="text-decoration: none; color: white;">Log Out</a></button>
                       
                      </div>
                    </div>
                  </div>

            </div>
            <div class="col-10">
                <div class="card">
                    <table class="table table-hover">
                        <thead>
                          <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Thesis Topic</th>
                            <th scope="col">Status</th>
                            <th scope="col"></th>
                          </tr>
                        </thead>
                        <tbody>

                          <% listOfStuddentAssigned.forEach(student => { %>
                            <tr>
                              <th scope="row"><%- student.fName%>  <%- student.lName %></th>
                              <td><%- student.topic %> <span><a href="#" data-bs-toggle="modal" data-bs-target="#exampleModal">read More</a></span></td>
                              <td id="status"><%- student.thesisStatus %></td>
                              <td>
                                
                                <form action="/supervisor/students/supervise" method="get" style="display: inline; margin-right: 5px;">
                                  <input type="hidden" name="studentID" value="<%- student.ID %>">
                                <button type="submit" id="approve" class="btn btn-outline-success" >Supervise</button>
                              </form>
                              
                            </td>
                              
                            
                            </tr>
                          <!-- description modal -->
                             <!-- Modal -->
                          <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                              <div class="modal-content">
                                <div class="modal-header">
                                  <h1 class="modal-title fs-5" id="exampleModalLabel"><%- student.topic %></h1>
                                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                  <%- student.description %>
                                </div>
                                <div class="modal-footer">
                                  <form action="/supervisor/students/supervise" method="get" style="display: inline; margin-right: 5px;">
                                 
                                    <button type="submit" id="approve" class="btn btn-outline-success" >Supervise</button>
                                  </form>
                                
                                </div>
                              </div>
                            </div>
                          </div>
                          <% }) %>

                         
                          
                         
                          
                          
                         
                      </table>
                </div>

            </div>
            
        </div>
      </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
  </body>
